import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		
		Metodos m = new Metodos();
		ArrayList<Cartas> cdisponibles = new ArrayList<>();
		ArrayList<Cartas> cusadas = new ArrayList<>();
		ArrayList<Cartas> jugador1 = new ArrayList<>();
		ArrayList<Cartas> jugador2 = new ArrayList<>();
		Random r = new Random();
		Scanner t = new Scanner(System.in);
		
		int numjugadas = 1;
		int robar = 0;
		String tipo;
		String color;
		boolean fin = false;
		
		m.generarCartas(cdisponibles);
		System.out.println("Repartiendo cartas...");
		m.prepararPartida(jugador1, jugador2, cdisponibles, cusadas);
		tipo = cusadas.getLast().getTipo();
		color = cusadas.getLast().getColor();
		
		do {
			System.out.println("\nÃšltima carta: ");
			System.out.println("[" + tipo + ", " + color + "]");
			
			if (numjugadas % 2 != 0) {
				numjugadas++;
				System.out.println("\nðŸŸ¦Turno del jugador 1, elige tu movimiento: ");
				m.jugarTurno(jugador1, cusadas, cdisponibles, tipo, color);
				
				if (cusadas.getLast().getTipo().equals("Salto de turno")) {
					robar = 0;
					numjugadas--;
					tipo = cusadas.getLast().getTipo();
					color = cusadas.getLast().getColor();
				}
				else if (cusadas.getLast().getTipo().equals("ChÃºpate 2")) {
					robar += 2;
					m.chupate2(jugador1, jugador2, cdisponibles, robar);
					tipo = cusadas.getLast().getTipo();
					color = cusadas.getLast().getColor();
				}
				else if (cusadas.getLast().getTipo().equals("ComodÃ­n")) {
					robar = 0;
					tipo = cusadas.getLast().getTipo();
					int n = m.elegirColor();
					String c = m.cambiarColor(n);
					color = c;
				}
				else if (cusadas.getLast().getTipo().equals("ChÃºpate 4")) {
					robar += 4;
					m.chupate4(jugador1, jugador2, cdisponibles, robar);
					tipo = cusadas.getLast().getTipo();
					int n = m.elegirColor();
					String c = m.cambiarColor(n);
					color = c;
				}
				else {
					robar = 0;
					tipo = cusadas.getLast().getTipo();
					color = cusadas.getLast().getColor();
				}
			}
			else {
				numjugadas++;
				System.out.println("\nðŸŸ¥Turno del jugador 2, elige tu movimiento: ");
				m.jugarTurno(jugador2, cusadas, cdisponibles, tipo, color);
				
				if (cusadas.getLast().getTipo().equals("Salto de turno")) {
					robar = 0;
					numjugadas--;
					tipo = cusadas.getLast().getTipo();
					color = cusadas.getLast().getColor();
				}
				else if (cusadas.getLast().getTipo().equals("ChÃºpate 2")) {
					robar += 2;
					m.chupate2(jugador2, jugador1, cdisponibles, robar);
					tipo = cusadas.getLast().getTipo();
					color = cusadas.getLast().getColor();
				}
				else if (cusadas.getLast().getTipo().equals("ComodÃ­n")) {
					robar = 0;
					tipo = cusadas.getLast().getTipo();
					int n = m.elegirColor();
					String c = m.cambiarColor(n);
					color = c;
				}
				else if (cusadas.getLast().getTipo().equals("ChÃºpate 4")) {
					robar += 4;
					m.chupate4(jugador2, jugador1, cdisponibles, robar);
					tipo = cusadas.getLast().getTipo();
					int n = m.elegirColor();
					String c = m.cambiarColor(n);
					color = c;
				}
				else {
					robar = 0;
					tipo = cusadas.getLast().getTipo();
					color = cusadas.getLast().getColor();
				}
				
			}
			
			if (cdisponibles.size() == 0) {
				 m.barajar(cusadas, cdisponibles);
			}
			
			if (jugador1.size() == 0 || jugador2.size() == 0) {
				String ganador = "";
				
				if (jugador1.size() == 0) {
					ganador = "ðŸŸ¦Jugador 1";
				}
				else if (jugador2.size() == 0) {
					ganador = "ðŸŸ¥Jugador 2";
				}
				
				m.ganador(jugador1, jugador2);
				fin = true;
			}
		}
		while (!fin);
		
		m.ganador(jugador1, jugador2);
		
	}
	
}

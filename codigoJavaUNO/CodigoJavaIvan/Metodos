import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class Metodos {
	
	public void generarCartas(ArrayList<Cartas> cdisponibles) {
		for (int i = 0; i <= 9; i++) {
			Integer j = i;
			String t = j.toString();
			cdisponibles.add(new Cartas(t, "游린Rojo"));
			cdisponibles.add(new Cartas(t, "游릳Amarillo"));
			cdisponibles.add(new Cartas(t, "游릴Verde"));
			cdisponibles.add(new Cartas(t, "游릱Azul"));
		}
		
		for (int i = 1; i <= 9; i++) {
			Integer j = i;
			String t = j.toString();
			cdisponibles.add(new Cartas(t, "游린Rojo"));
			cdisponibles.add(new Cartas(t, "游릳Amarillo"));
			cdisponibles.add(new Cartas(t, "游릴Verde"));
			cdisponibles.add(new Cartas(t, "游릱Azul"));
		}
		
		for (int i = 0; i < 2; i++) {
			cdisponibles.add(new Cartas("Salto de turno", "游린Rojo"));
			cdisponibles.add(new Cartas("Salto de turno", "游릳Amarillo"));
			cdisponibles.add(new Cartas("Salto de turno", "游릴Verde"));
			cdisponibles.add(new Cartas("Salto de turno", "游릱Azul"));
			cdisponibles.add(new Cartas("Ch칰pate 2", "游린Rojo"));
			cdisponibles.add(new Cartas("Ch칰pate 2", "游릳Amarillo"));
			cdisponibles.add(new Cartas("Ch칰pate 2", "游릴Verde"));
			cdisponibles.add(new Cartas("Ch칰pate 2", "游릱Azul"));
		}
		
		for (int i = 0; i < 4; i++) {
			cdisponibles.add(new Cartas("Comod칤n", "游쐸ulticolor"));
			cdisponibles.add(new Cartas("Ch칰pate 4", "游쐸ulticolor"));
		}
	}
	
	public void prepararPartida(ArrayList<Cartas> jugador1, ArrayList<Cartas> jugador2, ArrayList<Cartas> cdisponibles,ArrayList<Cartas> cusadas) {
		Random r = new Random();
		boolean repartido = false;
		
		for (int i = 0; i < 7; i++) {
			Cartas cmovimiento1 = cdisponibles.get(r.nextInt(cdisponibles.size()));
			Cartas cmovimiento2 = cdisponibles.get(r.nextInt(cdisponibles.size()));
			jugador1.add(cmovimiento1);
			cdisponibles.remove(cmovimiento1);
			jugador2.add(cmovimiento2);
			cdisponibles.remove(cmovimiento2);
		}
		
		Cartas cmovimiento = cdisponibles.get(r.nextInt(cdisponibles.size()));
		
		while (!repartido) {
			cmovimiento = cdisponibles.get(r.nextInt(cdisponibles.size()));
			
			if (!cmovimiento.getTipo().equals("Salto de turno") && !cmovimiento.getTipo().equals("Ch칰pate 2") && !cmovimiento.getTipo().equals("Comod칤n") && !cmovimiento.getTipo().equals("Ch칰pate 4")) {
				cusadas.add(cmovimiento);
				cdisponibles.remove(cmovimiento);
				repartido = true;
			}
		}
	}
	
	public void jugarTurno(ArrayList<Cartas> jugador, ArrayList<Cartas> cusadas, ArrayList<Cartas> cdisponibles, String tipo, String color) {
		Random r = new Random();
		Scanner t = new Scanner(System.in);
		boolean jugado = false;
		
		for (int i = 0; i < jugador.size(); i++) {
			System.out.println(i + 1 + " " + jugador.get(i));
		}
		
		System.out.println("0 [Robar]");
		
		do {
			int n = t.nextInt();
			
			if (n > 0 && n <= jugador.size()) {
				if (jugador.get(n - 1).getTipo().equals(tipo) || jugador.get(n - 1).getColor().equals(color) || jugador.get(n - 1).getColor().equals("游쐸ulticolor")) {
					cusadas.add(jugador.get(n - 1));
					jugador.remove(n - 1);
					System.out.println("Has usado: " + cusadas.getLast());
					jugado = true;
				}
				else {
					System.out.println("Acci칩n no v치lida");
				}
			}
			else if (n == 0) {
				Cartas cmovimiento = cdisponibles.get(r.nextInt(cdisponibles.size()));
				jugador.add(cmovimiento);
				cdisponibles.remove(cmovimiento);
				System.out.println(jugador.size() + " " + jugador.getLast());
				System.out.println("0 [Robar]");
			}
			else {
				System.out.println("Acci칩n no v치lida\n");
			}
		}
		while (!jugado);
	}
	
	public void chupate2(ArrayList<Cartas> tira, ArrayList<Cartas> siguiente, ArrayList<Cartas> cdisponibles, int robar) {
		Random r = new Random();
		Cartas cmovimiento = cdisponibles.get(r.nextInt(cdisponibles.size()));
		
		for (int i = 0; i < robar; i++) {
			cmovimiento = cdisponibles.get(r.nextInt(cdisponibles.size()));
			siguiente.add(cmovimiento);
			cdisponibles.remove(cmovimiento);
		}
	}
	
	public void chupate4(ArrayList<Cartas> tira, ArrayList<Cartas> siguiente, ArrayList<Cartas> cdisponibles, int robar) {
		Random r = new Random();
		Cartas cmovimiento = cdisponibles.get(r.nextInt(cdisponibles.size()));
		
		for (int i = 0; i < robar; i++) {
			cmovimiento = cdisponibles.get(r.nextInt(cdisponibles.size()));
			siguiente.add(cmovimiento);
			cdisponibles.remove(cmovimiento);
		}
	}
	
	public int elegirColor() {
		Scanner t = new Scanner(System.in);
		
		System.out.println("쮸 qu칠 color quieres cambiar?");
		System.out.println("1 游린[Rojo]");
		System.out.println("2 游릳[Amarillo]");
		System.out.println("3 游릴[Verde]");
		System.out.println("4 游릱[Azul]");
		int n = 0;
		
		do {
			n = t.nextInt();
			
			if (n < 1 || n > 4) {
				System.out.println("Acci칩n no v치lida\n");
			}
		}
		while (n < 1 || n > 4);
		
		return n;		
	}
	
	public String cambiarColor(int n) {
		String c = "";
		
		if (n == 1) {
			c = "游린Rojo";
		}
		else if (n == 2) {
			c = "游릳Amarillo";
		}
		else if (n == 3) {
			c = "游릴Verde";
		}
		else if (n == 4) {
			c = "游릱Azul";
		}
		
		return c;
	}
	
	public void barajar(ArrayList<Cartas> cusadas, ArrayList<Cartas> cdisponibles) {
		Random r = new Random();
		
		int c = cusadas.size() - 1;
		
		for (int i = 0; i < cusadas.size() - 1; i++) {
			int p = r.nextInt(0, c);
			
			do {
				if (cusadas.get(p).getColor().isEmpty()) {
					cdisponibles.add(cusadas.get(p));
				}
			}
			while (!cusadas.get(p).getColor().isEmpty());
		}
	}
	
	public String ganador(ArrayList<Cartas> jugador1, ArrayList<Cartas> jugador2, String j1, String j2) {
		String ganador = "";
		
		if (jugador1.size() == 0) {
			ganador = j1;
		}
		else if (jugador2.size() == 0) {
			ganador = j2;
		}
		
		return "춰Fin de la partida! 游끥Ganador: " + ganador + "游끥";
	}
	
}

